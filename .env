# MAGSASA-CARD Platform - Development Environment Configuration
# Local Development Environment Variables

# Application Configuration
ENVIRONMENT=development
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=development-secret-key-not-for-production

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_PATH=src/database/dynamic_pricing.db

# API Configuration
ALLOWED_ORIGINS=*
API_VERSION=2.1.0
API_BASE_URL=http://localhost:5000

# AI Service Configuration (Use your development keys)
# OPENAI_API_KEY=your_development_openai_key
# GOOGLE_AI_API_KEY=your_development_google_ai_key

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=text
LOG_DESTINATION=console

# Performance Configuration
WORKERS=1
TIMEOUT=60
MAX_REQUESTS=100
RELOAD=true

# Feature Flags
KAANI_INTEGRATION=true
AI_DIAGNOSIS=true
AGSCORE_ASSESSMENT=true
AB_TESTING=true
ADVANCED_ANALYTICS=false
REAL_TIME_MONITORING=false

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false
REQUEST_LOGGING=true
PERFORMANCE_MONITORING=false

# Security Configuration
SSL_REQUIRED=false
CORS_ENABLED=true
SECURITY_HEADERS=false
CSRF_PROTECTION=false

# Cache Configuration (Local Redis if available)
# REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300
SESSION_CACHE_TTL=3600

# External Service URLs (Use development/sandbox endpoints)
PAGASA_API_URL=https://api.pagasa.dost.gov.ph
CARD_MRI_API_URL=http://localhost:3001  # Mock service for development

# Notification Configuration
NOTIFICATION_EMAIL=dev@magsasa-card.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/dev/webhook

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_FREQUENCY=never

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Development/Testing Configuration
TESTING_MODE=true
MOCK_AI_RESPONSES=false
DEBUG_TOOLBAR=true
HOT_RELOAD=true

# Development Tools
FLASK_RELOAD=true
FLASK_RELOAD_EXTRA_FILES=src/
WERKZEUG_DEBUG_PIN=off

# Database Development Settings
DATABASE_ECHO=false  # Set to true to see SQL queries
DATABASE_POOL_PRE_PING=true

# AI Development Settings
AI_TIMEOUT=30
AI_RETRY_ATTEMPTS=3
AI_MOCK_RESPONSES=false

# File Upload Configuration
UPLOAD_FOLDER=uploads/
MAX_CONTENT_LENGTH=16777216  # 16MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# Development Server Configuration
HOST=0.0.0.0
PORT=5000
THREADED=true

# Deployment Metadata
DEPLOYMENT_TIMESTAMP=2025-09-28T12:00:00Z
DEPLOYMENT_VERSION=2.1.0
DEPLOYMENT_PLATFORM=local

# Development Database Seeding
SEED_DATABASE=true
SAMPLE_DATA=true

# Testing Configuration
TESTING_DATABASE=test_dynamic_pricing.db
TEST_COVERAGE=true
TEST_REPORTS=true

# Notes:
# 1. This configuration is for local development only
# 2. Use development API keys, not production keys
# 3. Debug mode is enabled for easier development
# 4. Hot reload is enabled for faster development
# 5. Security features are relaxed for development
# 6. Use SQLite for simplicity in development
# 7. Mock external services when needed
# 8. Enable detailed logging for debugging
# 9. Database seeding is enabled for testing
# 10. Never use these settings in production
